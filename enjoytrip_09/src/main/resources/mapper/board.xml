<!--			separator=" , ">-->
<!--			(#{articleNo}, #{fileinfo.saveFolder},-->
<!--			#{fileinfo.originalFile}, #{fileinfo.saveFile})-->
<!--		</foreach>-->
<!--	</insert>-->

	<select id="searchListByOther" parameterType="map"
		resultMap="article">
		select article_no, user_id, subject, content, hit,
			   register_time
		from board
		where ${key} = #{word}
		order by article_no desc
	</select>

	<select id="searchListAll" parameterType="map"
		resultMap="article">
		select article_no, user_id, subject, content, hit,
			   register_time
		from board
		order by article_no desc
	</select>

	<select id="searchListBySubject" parameterType="map"
		resultMap="article">
		select article_no, user_id, subject, content, hit,
		register_time
		from board
		where subject like concat('%', #{word}, '%')
		order by article_no desc
	</select>

	<select id="getArticle" parameterType="int"
		resultMap="article">
		select article_no, user_id, subject, content, hit,
		register_time
		from board
		where article_no = #{articleNo}
	</select>

